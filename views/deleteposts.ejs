</head>
<body>
    <div class="container">
       
        <h2>Video Posts</h2>
        
        <ul class="list-group">
            <% for(var i = 0; i < postsVideoArray.length; i++) { %>
          <li class="list-group-item">Title: <%= postsVideoArray[i].title %> (<%= postsVideoArray[i].date %>)  <form class="row" action="/deleteVideopost" method="post"><input type="checkbox" value= <%= postsVideoArray[i].title %> onChange="this.form.submit()" name="checkbox"></form></li>
       <% } %>
        </ul>
        <h2>Image Posts</h2>
        <ul class="list-group">
            <% for(var i = 0; i < postsArray.length; i++) { %>
          <li class="list-group-item">Title: <%= postsArray[i].title %> (<%= postsArray[i].date %>)  <form class="row" action="/deleteImagepost" method="post"><input type="checkbox" value= <%= postsArray[i].title %> onChange="this.form.submit()" name="checkbox"> </form></li>
       <% } %>
        </ul>
        
  
      
        
      </div>
</body>
</html>